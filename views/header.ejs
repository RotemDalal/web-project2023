<header class="header">
    <nav class="nav-bar-desktop">
        <div class="left-side">

            <div id="logo">
                <a class="img-logo" href="/"><img src="/img/index/wineIcon.jpg" style="width: 55px;"></a>
            </div>
            <div>
                <a class="menu-item" data-bs-toggle="modal" data-bs-target="#cartModal">
                    <i class="fa fa-shopping-cart"></i>
                    <span id="cart-counter" class="badge badge-danger">0</span>
                </a>
            </div>
            <div>
                <a class="menu-item" href="/wines.html">Wines</a>
            </div>
            <div>
                <a class="menu-item" href="/cocktails.html">Cocktails</a>
            </div>
            <div>
                <a class="menu-item" href="/shop">Shop</a>
            </div>
            <div>
                <i class="menu-item fa-solid fa-cart-shopping"></i>
            </div>
        </div>
        <div class="searchBox">

            <input class="searchInput" type="text" placeholder="Search">
            <button class="searchButton" href=#>
                <i class="material-icons">
                    search
                </i>
            </button>
        </div>
        <div class="right-side">
            <% if (!username) { %>
                <div>
                    <a class="login-item" href="#" id="login-item">Login</a>
                </div>
                <div>
                    <a class="login-item" href="#" id="register-item">Register</a>
                </div>
                <% } else { %>
                    <div>
                        <a class="login-item" href="/profile" id="profile-item">Profile</a>
                        <a class="login-item" href="/logout" id="logout-item">Logout</a>
                    </div>
                    <span id="hello-nav" class="text-white"></span>
                    <% } %>
        </div>
    </nav>
    <nav class="nav-bar-mobile">
        <div id="logo-mobile">
            <a class="img-logo" href="/"><img src="/img/index/wineIcon.jpg" style="width: 55px;"></a>
        </div>
        <i class="fa fa-bars" onclick="openHamburger()"></i>
    </nav>
    <!-- login modal -->
    <div class="modal" tabindex="-1" id="modal-login">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Login</h5>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
                </div>
                <div class="modal-body">
                    <label>Username</label>
                    <input type="text" id="username"></input>
                    <label>Password (8 characters minimum)</label>
                    <input type="password" id="password"></input>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-btn"
                        data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="login-btn">Login</button>
                </div>
            </div>
        </div>
    </div>


    <!--register modal-->
    <div class="modal" tabindex="-1" id="modal-register">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Register</h5>
                    <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
                </div>
                <div class="modal-body">
                    <label>Username</label>
                    <input type="text" id="username-reg"></input>
                    <label>Password (8 characters minimum)</label>
                    <input type="password" id="password-reg"></input>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancel-btn-reg"
                        data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="register-btn-reg">Register</button>
                </div>
            </div>
        </div>
    </div>
    <div class="hamburger-menu">
        <ul>
            <li><a class="menu-item" href="/">Home</a></li>
            <li><a class="menu-item" href="/wines.html">Wines</a></li>
            <li><a class="menu-item" href="/cocktails.html">Cocktails</a></li>
            <li><a class="menu-item" href="/shop">Shop</a></li>
        </ul>
    </div>
    <div class="hero-image">
        <img src="/img/shop/shop-hero.jpeg">
    </div>
</header>